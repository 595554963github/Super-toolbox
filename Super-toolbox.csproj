		</EmbeddedResource>
		<EmbeddedResource Include="plugins\yaz0.exe">
			<LogicalName>embedded.yaz0.exe</LogicalName>
		</EmbeddedResource>
		<EmbeddedResource Include="plugins\lzma.exe">
			<LogicalName>embedded.lzma.exe</LogicalName>
		</EmbeddedResource>
		</ItemGroup>	
	<ItemGroup>
		<PackageReference Include="Costura.Fody" Version="6.0.0">
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="CriFsV2Lib" Version="2.1.2" />
